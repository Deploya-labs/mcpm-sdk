{
  "name": "@mcpm/sdk",
  "version": "1.3.1",
  "description": "MCP SDK for Node.js. Helps you manage MCP projects programmatically.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./dist/",
    "cm": "cz",
    "lint": "biome lint --write ./src/",
    "start": "tsx ./src/cli.ts",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test": "jest --config jest.config.cjs",
    "typecheck": "tsc --noEmit",
    "release": "npm run build && npm publish --access public",
    "release:beta": "npm run build && npm publish --tag beta --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-club/sdk.git"
  },
  "license": "AGPL-3.0-only",
  "author": {
    "name": "MCP Club",
    "email": "winrey@users.noreply.github.com",
    "url": "https://github.com/mcp-club"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "boilerplate",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "commitizen",
    "semantic-release",
    "codecov"
  ],
  "bugs": {
    "url": "https://github.com/mcp-club/sdk/issues"
  },
  "homepage": "https://github.com/mcp-club/sdk#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "biome": "^0.3.3",
    "chalk": "^5.4.1",
    "conf": "^13.1.0",
    "env-paths": "^3.0.0",
    "prompts": "^2.4.2",
    "yoctocolors": "^2.1.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@types/prompts": "^2.4.9",
    "babel-jest": "^29.7.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "execa": "^9.5.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}